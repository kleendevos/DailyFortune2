<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fortune"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="8dp"
    tools:context="be.vdab.dailyfortune.FortuneActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fortune"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:fontFamily="sans-serif-smallcaps"
        android:text='"'
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text='"'
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_below="@+id/author"
        android:layout_alignRight="@+id/author"
        android:layout_alignEnd="@+id/author"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/fortune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-smallcaps"
        android:lineSpacingExtra="10sp"
        android:text="@string/hello"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="sans"
        android:layout_margin="32dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:text="Have a nice day!"
        android:textColor="@color/colorPrimary"
        android:textSize="8sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fortune"
        android:layout_alignRight="@+id/fortune"
        android:layout_below="@+id/fortune"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/author"
        android:textSize="10sp"
        tools:ignore="SmallSp" />
</RelativeLayout>


